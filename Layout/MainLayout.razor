@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<header>
    <NavMenu />
</header>

<main>
    <div class="container-fluid">
        <article class="content">
            @Body
        </article>
    </div>
</main>

<footer>
    <div class="footer-container">
        <div class="footer-section about">
            <h3>About Us</h3>
            <p>
                We provide high-quality products and services to help you achieve your goals.
            </p>
        </div>

        <div class="footer-section links">
            <h3>Quick Links</h3>
            <ul>
                <li><a href="/about">About</a></li>
                <li><a href="/services">Services</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/faq">FAQ</a></li>
            </ul>
        </div>

        <div class="footer-section social">
            <h3>Follow Us</h3>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
            </div>
        </div>
        
    </div>  
    <div class="footer-bottom">
        <p>&copy; 2024 NumNumFoods. All rights reserved.</p>
    </div>
</footer>

<script>
    window.addClickOutsideListener = function () {
        document.addEventListener('click', function (event) {
            const navbar = document.querySelector('.navbar-collapse');
            const isClickInside = navbar.contains(event.target) || event.target.classList.contains('navbar-toggler');

            if (!isClickInside && navbar.classList.contains('show')) {
                new bootstrap.Collapse(navbar).hide();
            }
        });
    };
</script>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("addClickOutsideListener");
        }
    }
}