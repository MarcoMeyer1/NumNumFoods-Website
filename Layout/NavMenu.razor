@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using NumNumFoods.Services
@inject UserState UserState

<nav class="navbar navbar-expand-lg navbar-dark bg-pink">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/Assets/NumNumNavIcon.png" alt="NumNumFoods Logo" style="height: 40px;" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="products">Our Products</NavLink>
                </li>

                @if (UserState.Role == "admin")
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/admin-dashboard">Admin Dashboard</NavLink>
                    </li>
                }
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/cart">
                        <img src="/Assets/Cart.png" alt="Cart" class="nav-icon" />
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">
                        <img src="/Assets/ic_profile (1).png" alt="Profile" class="nav-icon" />
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    protected override void OnInitialized()
    {
        UserState.OnChange += StateHasChanged; // Subscribe to changes
    }


    public void Dispose()
    {
        UserState.OnChange -= StateHasChanged; // Unsubscribe to avoid memory leaks
    }
}