@page "/account-details"

<div class="account-page">
    <h1 class="account-title">My Account</h1>

    <div class="account-content">
        <!-- Account Details Section -->
        <div class="account-details-section">
            <h2 class="account-details-heading">Account Details</h2>
            <div class="account-form">
                <label for="name">Name</label>
                <input type="text" id="name" class="account-input-field" placeholder="John" />

                <label for="surname">Surname</label>
                <input type="text" id="surname" class="account-input-field" placeholder="Doe" />

                <label for="email">Email (unchangeable)</label>
                <input type="email" id="email" class="account-input-field" value="johndoe@gmail.com" readonly />

                <label for="contact">Contact Number</label>
                <input type="text" id="contact" class="account-input-field" placeholder="0726488587" />

                <button class="confirm-changes-button">Confirm Changes</button>
            </div>
        </div>

        <!-- Billing Address Section -->
        <div class="billing-address-section">
            <h2 class="billing-address-heading">Billing address</h2>

            <div class="billing-address-box">
                <div class="name-phone-row">
                    <p class="billing-name">John</p>
                    <p class="billing-phone">0726488587</p>
                </div>
                <p class="billing-address">27 Warner park, Port Elizabeth, 1234</p>
                <p class="billing-type">Residential</p>
            </div>

            <div class="billing-address-box">
                <div class="name-phone-row">
                    <p class="billing-name">Jane</p>
                    <p class="billing-phone">0726488586</p>
                </div>
                <p class="billing-address">23 Newton park, Port Elizabeth, 1235</p>
                <p class="billing-type">Business</p>
            </div>

            <button class="add-new-address-button">Add new address</button>
        </div>

        <!-- Billing Information Section -->
        <div class="billing-information-section">
            <h2 class="billing-info-heading">Billing information</h2>
            <p class="billing-info-text">1 card added <a href="#" class="view-billing-info-link">View</a></p>
            <p><a href="#" class="view-billing-info-link">View</a></p>
        </div>
    </div>
</div>
