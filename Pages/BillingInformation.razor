@page "/profile/billing-information"

<div class="billing-info-page">
    <h1 class="billing-info-title">Billing Information</h1>

    <div class="billing-and-payment-section">
        <!-- Payment Method Section -->
        <div class="payment-method-section">
            <h2 class="payment-method-heading">Payment Method</h2>

            <div class="payment-card">
                <img src="Assets/MasterCard.png" alt="MasterCard" class="card-logo" />
                <div class="card-details">
                    <p class="card-type">Master Card</p>
                    <p class="card-number">**** **** **** 4002</p>
                    <p class="card-expiry">Expiry: 09/25</p>
                    <p class="card-holder-email">johndoe@gmail.com</p>
                </div>
                <button class="change-button">Change</button>
            </div>

            <div class="payment-actions">
                <button class="remove-payment-button">✖ Remove Payment Method</button>
                <!-- Updated the button to navigate to the NewCard page -->
                <a href="/new-card" class="add-payment-button">➕ Add Payment Method</a>
            </div>
        </div>

        <!-- Billing Address Section -->
        <div class="billing-address-section">
            <h2 class="payment-method-heading">Billing Address</h2>

            <div class="billing-card">
                <div class="billing-details">
                    <p><strong>John</strong> 0726488867</p>
                    <p>27 Walmer park,<br />Port Elizabeth, 1234</p>
                    <p class="address-type">Residential</p>
                </div>
            </div>

            <div class="billing-card">
                <div class="billing-details">
                    <p><strong>Jane</strong> 0726488866</p>
                    <p>23 Newton park,<br />Port Elizabeth, 1235</p>
                    <p class="address-type">Business</p>
                </div>
            </div>

            <!-- Updated the button to navigate to the NewAddress page -->
            <a href="/new-address" class="add-new-address-button">Add New Address</a>
        </div>
    </div>
</div>
